{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "check-spell",
            "command": "npx",
            "type": "shell",
            "args": [
                "cspell-cli",
                "lint",
                "--relative"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "install-cspell",
            "command": "npm",
            "type": "shell",
            "args": [
                "install",
                "git+https://github.com/streetsidesoftware/cspell-cli"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "reveal": "always"
            },
            "group": "build"
        },
        {
            "label": "cherry-top-x",
            "type": "shell",
            "command": "git",
            "args": [
                "checkout",
                "bullseye",
                "&&",
                "git",
                "cherry-pick",
                "$(git", "log", "--oneline", "--reverse", "dev", "-n", "${input:cherryTopX}", "|", "cut", "-d","' '", "-f1)",
                "-X", "theirs", "--allow-empty",
                "&&",
                "git",
                "checkout",
                "bookworm",
                "&&",
                "git",
                "cherry-pick",
                "$(git", "log", "--oneline", "--reverse", "dev", "-n", "${input:cherryTopX}", "|", "cut", "-d","' '", "-f1)",
                "-X", "theirs", "--allow-empty",
                "&&",
                "git",
                "checkout",
                "dev"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cherry-top-x-bullseye",
            "type": "shell",
            "command": "git",
            "args": [
                "checkout", 
                "bullseye",
                "&&",
                "git",
                "cherry-pick",
                "$(git", "log", "--oneline", "--reverse", "dev", "-n", "${input:cherryTopX}", "|", "cut", "-d","' '", "-f1)",
                "-X", "theirs", "--allow-empty",
                "&&",
                "git",
                "checkout",
                "dev"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cherry-top-x-bookworm",
            "type": "shell",
            "command": "git",
            "args": [
                "checkout",
                "bookworm",
                "&&",
                "git",
                "cherry-pick",
                "$(git", "log", "--oneline", "--reverse", "dev", "-n", "${input:cherryTopX}", "|", "cut", "-d","' '", "-f1)",
                "-X", "theirs", "--allow-empty",
                "&&",
                "git",
                "checkout",
                "dev"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cherry-hashes-bookworm",
            "type": "shell",
            "command": "bash",
            "args": [
                "./scripts/bash/cherry-hashes.sh",
                "${input:cherryHashes}",
                "bookworm"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "cherry-hashes-bullseye",
            "type": "shell",
            "command": "bash",
            "args": [
                "./scripts/bash/cherry-hashes.sh",
                "${input:cherryHashes}",
                "bullseye"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "push-all",
            "type": "shell",
            "command": "git",
            "args": [
                "push", "origin", "dev", "&&",
                "git", "checkout", "bullseye", "&&",
                "git", "push", "origin", "bullseye", "&&",
                "git", "checkout", "bookworm", "&&",
                "git", "push", "origin", "bookworm", "&&",
                "git", "checkout", "dev"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ],
    "inputs": [
        {
            "id": "cherryTopX",
            "type": "promptString",
            "description": "How many commits to cherry-pick?"
        },
        {
            "id": "cherryHashes",
            "type": "promptString",
            "description": "Enter the hashes to cherry-pick"
        }
    ]
}
