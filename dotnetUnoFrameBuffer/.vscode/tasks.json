{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean-debug-arm",
            "detail": "dotnet clean command for cleaning the application build for the armhf target",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/__change__.csproj",
                "-c", 
                "Debug",
                "-r",
                "linux-arm"
            ],
            "problemMatcher": "$msCompile",
            "icon": {
                "id": "trash",
                "color": "terminal.ansiYellow"
            }
        },
