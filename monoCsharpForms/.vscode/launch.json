{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mono Local",
            "request": "launch",
            "type": "mono",
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/bin/Debug/__change__.exe",
            "preLaunchTask": "build-application"
        },
        {
            "name": "Torizon AMD64",
            "request": "attach",
            "type": "mono",
            "address": "${config:torizon_ip}",
            "port": "${config:torizon_debug_port}",
            "preLaunchTask": "run-mono-debug-server-amd64",
            "postDebugTask": "pre-cleanup"
        },
        {
            "name": "Torizon ARMv7",
            "request": "attach",
            "type": "mono",
            "address": "${config:torizon_ip}",
            "port": "${config:torizon_debug_port}",
            "preLaunchTask": "run-mono-debug-server-arm",
            "postDebugTask": "pre-cleanup"
        },
        {
            "name": "Torizon ARMv8",
            "request": "attach",
            "type": "mono",
            "address": "${config:torizon_ip}",
            "port": "${config:torizon_debug_port}",
            "preLaunchTask": "run-mono-debug-server-arm64",
            "postDebugTask": "pre-cleanup"
        },
    ]
}
